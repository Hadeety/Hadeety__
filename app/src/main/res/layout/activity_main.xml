<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mohammed.hatoon.hadeety.MainActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Email"
        android:layout_marginTop="83dp"
        android:drawableLeft="@drawable/mail"
        android:background="@drawable/border"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:hint="Email"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Password"
        android:drawableLeft="@drawable/lock"
        android:background="@drawable/border"
        android:padding="10dp"
        android:hint="******"
        android:layout_below="@+id/Email"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:id="@+id/signinbutton"
        android:background="@drawable/button"
        android:layout_below="@+id/Password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in with Google"
        android:id="@+id/googleSignin"

        android:background="@drawable/gbutton"
        android:backgroundTint="#DC4E41"
        android:textColor="#ffffff"

        android:paddingRight="@dimen/activity_horizontal_margin"
        android:drawableRight="@drawable/google"
        android:layout_marginTop="69dp"
        android:layout_below="@+id/signinbutton"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in with twitter"
        android:id="@+id/twitterSignin"

        android:background="@drawable/tbutton"

        android:layout_below="@+id/googleSignin"
        android:layout_marginTop="10dp"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"


        android:paddingRight="@dimen/activity_horizontal_margin"
        android:textColor="#FFFFFF"
        android:drawableRight="@drawable/twitter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:id="@+id/forgotPass"


        android:layout_alignTop="@+id/signupTextView"
        android:layout_toLeftOf="@+id/signinbutton"
        android:layout_toStartOf="@+id/signinbutton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:id="@+id/signupTextView"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp"
        android:layout_below="@+id/twitterSignin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:onClick="ShowSignupInterface"
        />

</RelativeLayout>
